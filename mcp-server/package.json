{
  "name": "code-wiki-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for local-first code search across repositories with curated wiki content",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "code-wiki-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "code-wiki",
    "search",
    "claude"
  ],
  "author": "James Beach",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.0",
    "dotenv": "^16.3.1",
    "gray-matter": "^4.0.3",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
