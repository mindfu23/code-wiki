{
  "name": "code-wiki-web",
  "version": "1.0.0",
  "description": "Web interface for Code Wiki",
  "type": "module",
  "scripts": {
    "build": "npm run build:index && npm run build:functions",
    "build:index": "tsx src/indexBuilder.ts",
    "build:functions": "tsc -p tsconfig.functions.json",
    "dev": "netlify dev",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit && echo 'TypeScript check passed'"
  },
  "dependencies": {
    "@netlify/functions": "^2.4.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "netlify-cli": "^17.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
